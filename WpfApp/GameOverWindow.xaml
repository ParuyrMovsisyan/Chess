<Window x:Class="WpfApp.GameOverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Game Over" Height="100" Width="200" Top="200" Left="400">
    <Grid Margin="0,0,0,0">
        <Button x:Name="NewGameButton" Content="New Game" HorizontalAlignment="Left" Margin="9,35,0,0" VerticalAlignment="Top" Click="NewGameButton_Click" Height="18" Width="62"/>
        <Button x:Name="ExitButton" Content="Exit Game" Margin="90,35,10,0" VerticalAlignment="Top" Click="ExitButton_Click"  Height="18" Width="62" Visibility="Visible"/>
        <Label x:Name="ResultLabel" Content="" HorizontalAlignment="Center" Margin="0,4,0,0" VerticalAlignment="Top" Height="26" Width="150" FontWeight="Bold"/>
    </Grid>
</Window>
