<Window x:Class="WpfApp.ContinueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Continue saved game" Height="150" Width="330" Top="200" Left="400">
    <Grid>
        <Label Content="You have a saved game. Do you want to continue" HorizontalAlignment="Center" Margin="0,24,0,0" VerticalAlignment="Top"/>
        <Button x:Name="ContinueButton" Content="Continue" HorizontalAlignment="Left" Margin="93,74,0,0" VerticalAlignment="Top" Click="ContinueButton_Click"/>
        <Button x:Name="NewGameButton" Content="New Game" HorizontalAlignment="Left" Margin="193,74,0,0" VerticalAlignment="Top" Click="NewGameButton_Click"/>

    </Grid>
</Window>
