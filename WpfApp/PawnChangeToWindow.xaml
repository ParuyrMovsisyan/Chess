<Window x:Class="WpfApp.PawnChangeToWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="Time to change pawn" Height="450" Width="800">
    <Grid>
        <Button x:Name="QueenButton" Content="Queen" HorizontalAlignment="Left" Margin="135,197,0,0" VerticalAlignment="Top" Click="QueenButton_Click"/>
        <Button x:Name="RookButton" Content="Rook" HorizontalAlignment="Left" Margin="245,197,0,0" VerticalAlignment="Top" Click="RookButton_Click" Height="20"/>
        <Button x:Name="KnightButton" Content="Knight" HorizontalAlignment="Left" Margin="360,197,0,0" VerticalAlignment="Top" Click="KnightButton_Click"/>
        <Button x:Name="BishopButton" Content="Bishop" HorizontalAlignment="Left" Margin="465,197,0,0" VerticalAlignment="Top" Click="BishopButton_Click"/>
    </Grid>
</Window>
